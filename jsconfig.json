{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.js",
    "app/**/*.jsx",
    "components/**/*.js",
    "components/**/*.jsx",
    "lib/**/*.js",
    "translation/**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*_broken.js",
    "**/*_old.js",
    "**/*_backup.js",
    "**/*_fixed.js"
  ]
}
